@page "{id:guid}"
@model EmailCollector.Api.Pages.CustomEmailTemplates.Delete

@{
    ViewData["Title"] = "Delete Custom Email Template";
}

<h1>Delete Custom Email Template</h1>

<h3>Are you sure you want to delete this template?</h3>
<div>
    <h4>CustomEmailTemplate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Form ID
        </dt>
        <dd class="col-sm-10">
            @Model.CustomEmailTemplate.FormId
        </dd>
        <dt class="col-sm-2">
            Event
        </dt>
        <dd class="col-sm-10">
            @Model.CustomEmailTemplate.Event
        </dd>
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Model.CustomEmailTemplate.TemplateSubject
        </dd>
        <dt class="col-sm-2">
            Is Active
        </dt>
        <dd class="col-sm-10">
            @(Model.CustomEmailTemplate.IsActive ? "Yes" : "No")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CustomEmailTemplate.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>