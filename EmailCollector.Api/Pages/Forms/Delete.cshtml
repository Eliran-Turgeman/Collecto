@page "{id:guid}"
@model EmailCollector.Api.Pages.Forms.Delete

@{
    ViewData["Title"] = "Delete Form";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this form?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Form.FormName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Form.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>